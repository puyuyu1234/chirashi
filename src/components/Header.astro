---
import { SITE_TITLE } from '../consts';

const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<header>
  <nav>
    <h2><a href={`${base}/`}>{SITE_TITLE}</a></h2>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 1em 2em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1.5em;
  }

  h2 a {
    text-decoration: none;
    color: rgb(var(--black));
  }

  h2 a:hover {
    color: var(--accent);
  }

  nav {
    display: flex;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }
</style>
