---
import { getCollection } from 'astro:content';
import { formatDate } from '../../utils/formatDate';
import LayoutWithSidebar from '../../layouts/LayoutWithSidebar.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort((a, b) => {
  // 日付で昇順ソート（古い順）
  const dateCompare = a.data.pubDate.valueOf() - b.data.pubDate.valueOf();
  if (dateCompare !== 0) return dateCompare;
  // 同じ日付ならID（ファイル名）で昇順ソート
  return a.id.localeCompare(b.id);
});

const base = import.meta.env.BASE_URL.replace(/\/$/, '');
---

<LayoutWithSidebar title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <section>
    <style>
      ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      ul li {
        width: 100%;
      }
      ul li * {
        text-decoration: none;
        transition: 0.2s ease;
      }
      ul li a {
        display: block;
      }
      .title {
        margin: 0;
        color: rgb(var(--black));
        line-height: 1;
      }
      .date {
        margin: 0;
        color: rgb(var(--gray));
      }
      ul li a:hover h4,
      ul li a:hover .date {
        color: rgb(var(--accent));
      }
    </style>
    <ul>
      {
        posts.map((post) => (
          <li>
            <a href={`${base}/blog/${post.id.replace(/\.mdx?$/, '')}/`}>
              <h4 class="title">{post.data.title}</h4>
              <p class="date">
                <time datetime={post.data.pubDate.toISOString()}>
                  {formatDate(post.data.pubDate)}
                </time>
              </p>
            </a>
          </li>
        ))
      }
    </ul>
  </section>
</LayoutWithSidebar>
